<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:layout_margin="4dp"
    android:background="@drawable/yhzs_listview_item_shape"
    android:descendantFocusability="afterDescendants">
    <ImageView
        android:id="@+id/head_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/people"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/caidanfangan"
            android:textSize="18sp"
            android:textColor="@color/yellow"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="采纳:"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:id="@+id/caina_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1852"
                    android:textColor="@color/yellow"
                    android:textSize="16sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tuijian"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:id="@+id/tuijian_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1852"
                    android:textColor="@color/yellow"
                    android:textSize="16sp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nandu"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:id="@+id/nandu_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中级"
                    android:textSize="16sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="时长："
                    android:textColor="@android:color/black"/>
                <TextView
                    android:id="@+id/time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="120分钟"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/feast_food_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1.酸菜鱼 2.酸菜鱼 3.酸菜鱼 1.酸菜鱼 2.酸菜鱼 3.酸菜鱼 1.酸菜鱼 2.酸菜鱼 3.酸菜鱼 1.酸菜鱼 2.酸菜鱼 3.酸菜鱼"
                android:lineSpacingExtra="2dp"
                android:layout_marginRight="30dp"
                />
            <TextView
                android:id="@+id/feast_zhankai_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[展开]"
                android:textColor="@color/yellow"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@id/feast_food_name"
                />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
